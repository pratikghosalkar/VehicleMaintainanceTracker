<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="binary.com.vmt">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity
            android:name=".VehicleRegistrationActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".DriverDetailsActivity">
        </activity>
        <activity android:name=".VehicleMaintenanceActivity">
        </activity>
        <activity android:name=".CheckUpActivity">
        </activity>
        <activity android:name=".CheckUpBeforeSchedule">
        </activity>
    </application>

</manifest>